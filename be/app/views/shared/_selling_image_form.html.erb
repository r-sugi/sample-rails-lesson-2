
<%= form_for(@selling_image, url: user_selling_images_path, html: { multipart: true }) do |f| %>
  <h2>新規画像出品フォーム</h2>

  <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :picture, "画像" %>
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', class: 'form-control' %>

    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, placeholder: "タイトルを入力してください", class: 'form-control' %>

    <%= f.label :content, "コメント" %>
    <%= f.text_area :content, placeholder: "説明文を入力してください", class: 'form-control' %>

    <%= f.label :price, "価格" %>
    <%= f.number_field :price, placeholder: "価格を入力していください", class: 'form-control'%>

    <%= f.label :valid_from, "出品開始日" %>
    <%= f.date_field :valid_from, value: Time.zone.now.strftime("%Y-%m-%d"), placeholder: "出品開始日を入力してください", class: 'form-control' %>

    <%= f.label :valid_to, "出品終了日" %>
    <%= f.date_field :valid_to, placeholder: "出品終了日を入力してください", class: 'form-control' %>

  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
  $('#selling_image_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
